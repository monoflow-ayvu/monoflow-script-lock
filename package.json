{
  "name": "monoflow-script-lock",
  "version": "0.10.0",
  "description": "Script para bloqueio e desbloqueio de equipamentos. Não bloqueia nem desbloqueia sozinho. Precisa de outro script para mudar o estado. Compatível com Pikin IO, Monoflow IO e proximamente Teltonika",
  "settingsSchema": {
    "display": "form",
    "settings": {
      "pdf": {
        "id": "1ec0f8ee-6685-5d98-a847-26f67b67d6f0",
        "src": "https://files.form.io/pdf/5692b91fd1028f01000407e3/file/1ec0f8ee-6685-5d98-a847-26f67b67d6f0"
      }
    },
    "components": [
      {
        "label": "Objetivo",
        "widget": "choicesjs",
        "tooltip": "Objetivos para ativar/desativar quando bloquear/desbloquear o dispositivo.",
        "tableView": true,
        "multiple": true,
        "defaultValue": [
          "MONOFLOW_RELAY_1"
        ],
        "data": {
          "values": [
            {
              "label": "Monoflow Relay 1",
              "value": "MONOFLOW_RELAY_1"
            },
            {
              "label": "Monoflow Relay 2",
              "value": "MONOFLOW_RELAY_2"
            },
            {
              "label": "Monoflow Buzzer",
              "value": "MONOFLOW_BUZ_1"
            }
          ]
        },
        "key": "target",
        "type": "select",
        "input": true
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "EULA",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.17.7",
    "@babel/plugin-transform-arrow-functions": "7.16.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "7.0.8",
    "@types/commander": "2.12.2",
    "@types/firebase": "3.2.1",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.180",
    "@types/uuid": "8.3.4",
    "babel-loader": "8.2.3",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "9.1.0",
    "compression-webpack-plugin": "9.2.0",
    "graphql": "16.3.0",
    "graphql-request": "4.1.0",
    "inquirer": "8.2.1",
    "jest": "27.5.1",
    "mobx-keystone": "0.67.1",
    "semver": "7.3.5",
    "size-limit": "7.0.8",
    "ts-loader": "9.2.8",
    "typed-emitter": "2.1.0",
    "typescript": "4.6.2",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.0.36",
    "@fermuch/telematree": "9.20.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.6.8",
    "lodash": "4.17.21",
    "mobx": "6.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
